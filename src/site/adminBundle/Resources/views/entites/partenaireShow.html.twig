{% extends 'siteadminBundle::page_admin_generic.html.twig' %}
{% set cssjsloads = 'simple' %}
{% set DEVMODE = (app.environment in ['dev', 'test']) or (is_granted('ROLE_SUPER_ADMIN')) %}

{% block page_heading %}
<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-lg-12 m-t-xs">
		<h2 class="row">
			<div class="col-md-8">Partenaire {{ entite.nom }}</div>
			<div class="col-md-4">
				<a href="{{ path('labo_ins_entite', {entite: entite_name, id: entite.id, action: 'delete'}) }}" type="button" class="btn btn-xs btn-danger btn-outline pull-right need-confirmation" title="Supprimer partenaire" data-message="Souhaitez-vous vraiment supprimer ce partenaire ?"><i class="fa fa-times icon-wait-on-click"></i> Supprimer</a>
				<a href="{{ path('labo_ins_entite', {entite: entite_name, id: entite.id, action: 'edit'}) }}" style="margin-right: 4px;" type="button" class="btn btn-xs btn-warning pull-right"><i class="fa fa-pencil icon-wait-on-click"></i> Modifier</a>
				{#
				<a href="{{ path('labo_ins_entite', {entite: entite_name, id: entite.id, action: 'show'}) }}" style="margin-right: 4px;" type="button" class="btn btn-xs btn-white pull-right"><i class="fa fa-eye icon-wait-on-click"></i> Voir</a>
				#}
				<a href="{{ path('labo_ins_entite', {entite: entite_name}) }}" style="margin-right: 4px;" type="button" class="btn btn-xs btn-white pull-right"><i class="fa fa-bars icon-wait-on-click"></i> Liste</a>
			</div>
		</h2>
		<ol class="breadcrumb">
			<li><a href="{{ path('acme_grouplabo_inspinia_homepage') }}"><strong>Administration</strong></a></li>
			<li><a href="{{ path('labo_ins_entite', {entite: entite_name}) }}"><strong>Partenaires</strong></a></li>
			<li>{{ entite.nom|raw }}</li>
		</ol>
	</div>
</div>
{% endblock page_heading %}

{% block content %}
<div class="row">

	<div class="col-lg-8">
		<div class="ibox float-e-margins">
			<div class="ibox-content">
				<h2 class="row">
					<div class="col-md-8">{{ entite.nom|raw }}</div>
					<div class="col-md-4">
						<a href="{{ path('labo_ins_entite', {entite: entite_name, id: entite.id, action: 'delete'}) }}" type="button" class="btn btn-xs btn-danger btn-outline pull-right need-confirmation" title="Supprimer partenaire" data-message="Souhaitez-vous vraiment supprimer ce partenaire ?"><i class="fa fa-times icon-wait-on-click"></i> Supprimer</a>
						<a href="{{ path('labo_ins_entite', {entite: entite_name, id: entite.id, action: 'edit'}) }}" style="margin-right: 4px;" type="button" class="btn btn-xs btn-warning pull-right"><i class="fa fa-pencil icon-wait-on-click"></i> Modifier</a>
					</div>
				</h2>
				<hr>
				<table class="table table-striped table-bordered table-hover dataTables dataTable dtr-inline" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
					<thead>
						<tr>
							<th>Libellé</th>
							<th>valeurs</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td><strong>Nom</strong></td>
							<td>{{ entite.nom }}</td>
						</tr>
						<tr>
							<td><strong>Adresse</strong></td>
							<td>
								{% if entite.adresse is not null %}
								<p>{{ entite.adresse.adresse }}</p>
								<p>{{ entite.adresse.cp }} - {{ entite.adresse.ville }}</p>
								<hr class="m-b-xs m-t-xs">
								<p>{{ entite.adresse.commentaire|raw }}</p>
								{% endif %}
							</td>
						</tr>
						<tr>
							<td><strong>Accroche</strong></td>
							<td>{{ entite.accroche|raw }}</td>
						</tr>
						<tr>
							<td><strong>Descriptif</strong></td>
							<td>{{ entite.descriptif|raw }}</td>
						</tr>
						<tr>
							<td><strong>Niveau</strong></td>
							<td>{{ entite.niveau }}</td>
						</tr>
						<tr>
							<td><strong>URL</strong></td>
							<td>{{ entite.url }}</td>
						</tr>
						<tr>
							<td><strong>Flux URL</strong></td>
							<td>{{ entite.urlflux }}</td>
						</tr>
						<tr>
							<td><strong>Code Pub</strong></td>
							<td>{{ entite.codepub }}</td>
						</tr>
						<tr>
							<td><strong>Email</strong></td>
							<td>{{ entite.email }}</td>
						</tr>
						<tr>
							<td><strong>Téléphone</strong></td>
							<td>{{ entite.tel }}</td>
						</tr>
						<tr>
							<td><strong>Commentaire</strong></td>
							<td>{{ entite.commentaire|raw }}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>

	
	<div class="col-sm-6 col-lg-4">
		<div class="ibox float-e-margins">
			<div class="ibox-title">
				<h3>Logotype</h3>
			</div>
			<div class="ibox-content text-center">
				{% if entite.logo.fichierNom is defined %}
				<img src="{{ asset('images/logo/' ~ entite.logo.fichierNom) }}" class="img-thumbnail img-responsive center-block">
				{% else %}
				<i class="fa fa-ban fa-3x text-muted"></i>
				{% endif %}
			</div>
		</div>
	</div>
	
	<div class="col-sm-6 col-lg-4">
		<div class="ibox float-e-margins">
			<div class="ibox-title">
				<h3>Image</h3>
			</div>
			<div class="ibox-content text-center">
				{% if entite.image.fichierNom is defined %}
				<img src="{{ asset('images/optim/' ~ entite.image.fichierNom) }}" class="img-thumbnail img-responsive block-center">
				{% else %}
				<i class="fa fa-ban fa-3x text-muted"></i>
				{% endif %}
			</div>
		</div>
	</div>

</div>
{% endblock content %}