{% extends 'siteadminBundle::page_admin_generic.html.twig' %}
{% set cssjsloads = 'TAB' %}
{% set DEVMODE = (app.environment in ['DEV', 'TEST']) or (is_granted('ROLE_SUPER_ADMIN')) %}

{% block page_heading %}
<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-lg-12 m-t-xs">
		<h2>Partenaires{% if type.type_values|default(null) != null %} - {{ type.type_values|join('/') }}{% endif %}</h2>
		<ol class="breadcrumb">
			<li><a href="{{ path('acme_grouplabo_inspinia_homepage') }}"><strong>Administration</strong></a></li>
			{% if type.type_values|default(null) != null %}
			<li><a href="{{ path('labo_ins_entite', {entite: entite_name}) }}"><strong>Partenaires</strong></a></li>
			<li>{{ type.type_values|join('/') }}</li>
			{% else %}
			<li>Partenaires</li>
			{% endif %}
		</ol>
	</div>
</div>
{% endblock page_heading %}

{% block content %}
<div class="row">
	<div class="col-md-12">
		<div class="ibox float-e-margins">
			<div class="ibox-content">
				{% if entites|length > 0 %}
				<table class="table table-striped table-bordered table-hover dataTables dataTable dtr-inline" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
					<thead>
						<tr>
							{% if app.environment in ['dev','test'] or is_granted('ROLE_SUPER_ADMIN') %}<th>id</th>{% endif %}
							<th>Nom</th>
							<th>Actions</th>
							<th>Descriptif</th>
							<th>URL</th>
							<th>Email</th>
							<th>Téléphone</th>
						</tr>
					</thead>
					<tbody>
						{% for entite in entites %}
						<tr>
							{% if app.environment in ['dev','test'] or is_granted('ROLE_SUPER_ADMIN') %}<td>{{ entite.id }}</td>{% endif %}
							<td>
								{% if entite.image is not null %}
								<img src="{{ asset('images/optim/' ~ entite.image.fichierNom) }}" class="img-responsive img-thumbnail" style="width: 80px;">
								{% else %}
								<i class='fa fa-ban fa-2x'></i>
								{% endif %}
							</td>
							<td>
								<div class="btn-group">
									{% if type.type_values|default(null) != null %}
									<a href="{{ path('labo_ins_entite_type', {entite: entite_name, type_related: type.type_related, type_field: type.type_field, type_values: type.type_values|join(type_value_joiner)|url_encode, id: entite.id, action: 'show'}) }}" type="button" class="btn btn-white btn-xs" title="Voir {{ entite.nom }}"><i class="fa fa-eye"></i></a>
									<a href="{{ path('labo_ins_entite_type', {entite: entite_name, type_related: type.type_related, type_field: type.type_field, type_values: type.type_values|join(type_value_joiner)|url_encode, id: entite.id, action: 'edit'}) }}" type="button" class="btn btn-white btn-xs" title="Modifier {{ entite.nom }}"><i class="fa fa-pencil"></i></a>
									<a href="{{ path('labo_ins_entite_type', {entite: entite_name, type_related: type.type_related, type_field: type.type_field, type_values: type.type_values|join(type_value_joiner)|url_encode, id: entite.id, action: 'delete'}) }}" type="button" class="btn btn-white btn-xs" title="Supprimer {{ entite.nom }}"><i class="fa fa-times"></i></a>
									{% else %}
									<a href="{{ path('labo_ins_entite', {entite: entite_name, id: entite.id, action: 'show'}) }}" type="button" class="btn btn-white btn-xs" title="Voir {{ entite.nom }}"><i class="fa fa-eye"></i></a>
									<a href="{{ path('labo_ins_entite', {entite: entite_name, id: entite.id, action: 'edit'}) }}" type="button" class="btn btn-white btn-xs" title="Modifier {{ entite.nom }}"><i class="fa fa-pencil"></i></a>
									<a href="{{ path('labo_ins_entite', {entite: entite_name, id: entite.id, action: 'delete'}) }}" type="button" class="btn btn-white btn-xs" title="Supprimer {{ entite.nom }}"><i class="fa fa-times"></i></a>
									{% endif %}
								</div>
								{% if DEVMODE %}
								<hr class="m-b-sm m-t-xs">
								<div class="btn-group">
									{% if type.type_values|default(null) != null %}
									<a href="{{ path('labo_ins_entite_type', {entite: entite_name, type_related: type.type_related, type_field: type.type_field, type_values: type.type_values|join(type_value_joiner)|url_encode, id: entite.id, action: 'check'}) }}" type="button" class="btn btn-danger btn-xs" title="Checker article {{ entite.nom }}"><i class="fa fa-check"></i></a>
									{% else %}
									<a href="{{ path('labo_ins_entite', {entite: entite_name, id: entite.id, action: 'check'}) }}" type="button" class="btn btn-danger btn-xs" title="Checker article {{ entite.nom }}"><i class="fa fa-check"></i></a>
									{% endif %}
								</div>
								{% endif %}
							</td>
							<td>{{ phraseCut(entite.descriptif, 200)|raw }}</td>
							<td>{{ entite.url|raw }}</td>
							<td>{{ entite.email|raw }}</td>
							<td>{{ entite.tel|raw }}</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
				{% else %}
				<h3><i class="fa fa-ban"></i> Aucun partenaire pour l'instant…</h3>
				{% endif %}
			</div>
		</div>
	</div>
</div>
{% endblock content %}