{% extends 'siteadminBundle::page_admin_generic.html.twig' %}
{% set cssjsloads = 'TAB' %}
{% set DEVMODE = (app.environment in ['DEV', 'TEST']) or (is_granted('ROLE_SUPER_ADMIN')) %}

{% block page_heading %}
<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-lg-12 m-t-xs">
		<h2>{{ htitle|capitalize }}</h2>
		<ol class="breadcrumb">
			<li><a href="{{ path('acme_grouplabo_inspinia_homepage') }}"><strong>Administration</strong></a></li>
			<li><a href="{{ path('labo_users', {type: 'all'}) }}"><strong>Utilisateurs</strong></a></li>
			<li>{{ roleName(type)|raw|capitalize }}</li>
		</ol>
		{% if DEVMODE %}
		<hr class="m-b-sm m-t-xs">
		<div class='btn-group'>
			<a href="{{ path('labo_users', {type: type, action: 'check'}) }}" type="button" class="btn btn-danger btn-xs"><i class="fa fa-check icon-wait-on-click" data-icon-wait="{{ spinIcon|default('fa-cogs') }}"></i> Check tous utilisateurs</a>
		</div>
		{% endif %}
	</div>
</div>
{% endblock page_heading %}

{% block content %}
<div class="row">

{% if users|length > 0 %}

	{% if type|upper not in ['ROLE_TRANSLATOR', 'ROLE_EDITOR', 'ROLE_ADMIN', 'ROLE_SUPER_ADMIN'] %}
	<div class="col-md-12">
		<div class="ibox float-e-margins">
<!-- 			<div class="ibox-title">
				<h5>Tableau {{ htitle }}</h5>
				<div class="ibox-tools">
					<a class="collapse-link">
						<i class="fa fa-chevron-up"></i>
					</a>
					<a class="fullscreen-link">
						<i class="fa fa-expand"></i>
					</a>
					<a class="close-link">
						<i class="fa fa-times"></i>
					</a>
				</div>
			</div> -->
			<div class="ibox-content">
				<table class="table table-striped table-bordered table-hover dataTables dataTable dtr-inline" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
					<thead>
						<tr>
							<th>Login</th>
							<th>Nom/prénom</th>
							<th>Actions</th>
							<th>Email</th>
							<th>Type</th>
						</tr>
					</thead>
					<tbody>
						{% for user in users if app.user.haveRight(user) %}

						{% set classtype = userColor(user) %}
						<tr>
							<td>
								<p class="text-{{ classtype|default('muted')|raw }}">{{ user.username }}</p>
								{% if user.lastLogin is not null %}
								<em class='text-primary'>Dernier log&nbsp;: {{ user.lastLogin|date(formatDateHeure) }}</em>
								{% else %}
								<em class='text-muted'>(jamais connecté)</em>
								{% endif %}
							</td>
							<td>
								<strong>{{ user.nom }}</strong><br>{{ user.prenom }}
							</td>
							<td>
								<div class="btn-group">
									<a href="{{ path('labo_user_info', {username: user.username}) }}" type="button" class="btn btn-white btn-xs" title="Voir {{ user.username }}"><i class="fa fa-eye icon-wait-on-click"></i></a>
									<a href="{{ path('labo_user_edit', {username: user.username}) }}" type="button" class="btn btn-white btn-xs" title="Modifier {{ user.username }}"><i class="fa fa-pencil icon-wait-on-click"></i></a>
									{% if user.id == app.user.id %}
									<a href="{{ path('fos_user_deleting', {id: app.security.token.user.id}) }}" type="button" class="btn btn-white btn-xs need-confirmation" title="Supprimer votre compte ?" data-message="ATTENTION, vous êtes sur le point de supprimer votre compte ! Souhaitez-vous vraiment faire cette opération ?"><i class="fa fa-times icon-wait-on-click"></i></a>
									{% elseif app.user.haveRight(user) %}
									<a href="{{ path('labo_user_delete', {username: user.username}) }}" type="button" class="btn btn-white btn-xs need-confirmation" title="Supprimer {{ user.username }}" data-message="Souhaitez-vous vraiment supprimer ce compte ?"><i class="fa fa-times icon-wait-on-click"></i></a>
									{% endif %}
								</div>
								{% if DEVMODE %}
								<hr class="m-b-sm m-t-xs">
								<div class="btn-group">
									<a href="{{ path('labo_users', {type: 'all', action: 'check', params: {username: user.username}|json_encode }) }}" type="button" class="btn btn-danger btn-xs" title="Checker utilisateur {{ user.username }}"><i class="fa fa-check icon-wait-on-click" data-icon-wait="{{ spinIcon|default('fa-cogs') }}"></i></a>
									{% if delete_form[user.id] is defined %}
									{% form_theme delete_form[entite.id] ':Form:simple_bootstrap_form.html.twig' %}
									{{ form_start(delete_form[entite.id]) }}
									{{ form_widget(delete_form[entite.id].submit) }}
									{{ form_rest(delete_form[entite.id]) }}
									{{ form_end(delete_form[entite.id]) }}
									{% endif %}
								</div>

								{% endif %}
							</td>
							<td><a href="mailto:{{ user.email }}">{{ user.email }}</a</td>
							<td>
								{% for role in user.roles %}
								<label class="label label-{{ roleColor(role) }}" title="{{ role }}">{{ roleName(role) }}</label> 
								{% endfor %}
							</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

	{% else %}

	{% for user in users if app.user.haveRight(user) %}
	{% set classtype = userColor(user) %}

	{% if modeUserList|default(0) == 1 %}
	<div class="col-lg-3">
		<div class="contact-box center-version">
			<a href="{{ path('labo_user_info', {username: user.username}) }}">
				<!-- <img alt="image" class="img-circle" src="img/a2.jpg"> -->
				<i class="fa fa-user fa-5x text-{{ classtype|default('muted')|raw }}"></i>
				<h3 class="m-b-xs"><strong>{{ user.prenom }} {{ user.nom|default(user.username) }}</strong></h3>
				<div class="font-bold"><i class="fa fa-user"></i> {{ user.username }}</div>
				<address class="m-t-md">
					<strong>{{ user.adresse }}</strong><br>
					{{ user.cp }}<br>
					{{ user.ville }}<br>
					<abbr title="Téléphone">Tél. </abbr> {{ user.tel }}
				</address>
			</a>
			<div class="contact-box-footer">
				<div class="m-t-xs btn-group">
					<a href="{{ path('labo_user_info', {username: user.username}) }}" class="btn btn-xs btn-white"><i class="fa fa-eye icon-wait-on-click"></i> Voir</a>
					<a href="{{ path('labo_user_edit', {username: user.username}) }}" class="btn btn-xs btn-white"><i class="fa fa-pencil icon-wait-on-click"></i> Modifier</a>
					{% if user.id == app.user.id %}
					<a href="{{ path('fos_user_deleting', {id: app.security.token.user.id}) }}" type="button" class="btn btn-white btn-xs need-confirmation" title="Supprimer votre compte ?" data-message="ATTENTION, vous êtes sur le point de supprimer votre compte ! Souhaitez-vous vraiment faire cette opération ?"><i class="fa fa-times icon-wait-on-click"></i></a>
					{% elseif app.user.haveRight(user) %}
					<a href="{{ path('labo_user_delete', {username: user.username}) }}" class="btn btn-xs btn-white need-confirmation" title="Supprimer {{ user.username }}" data-message="Souhaitez-vous vraiment supprimer ce compte ?"><i class="fa fa-times icon-wait-on-click"></i> Supprimer</a>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
	{% else %}
	<div class="col-lg-4">
		<div class="contact-box">
			<div class="col-sm-4">
				<div class="text-center">
					<i class="fa fa-user fa-5x text-{{ classtype|default('muted')|raw }}"></i>
					<div class="m-t-xs font-bold">{{ user.username }}</div>
				</div>
			</div>
			<div class="col-sm-8">
				<h3>{{ user.prenom }} <strong>{{ user.nom|default(user.username) }}</strong></h3>
				<!-- <p><i class="fa fa-map-marker"></i> Riviera State 32/106</p> -->
				<address>
					<strong>{{ user.adresse }}</strong><br>
					{{ user.cp }}<br>
					{{ user.ville }}<br>
					<abbr title="Téléphone">Tél. </abbr> {{ user.tel }}
				</address>
			</div>
			<div class="clearfix"></div>
			<div class="row">
				<div class="col-xs-4">
					<a href="{{ path('labo_user_info', {username: user.username}) }}" type="button" class="btn btn-white btn-xs btn-block"><i class="fa fa-eye icon-wait-on-click"></i></a>
				</div>
				<div class="col-xs-4">
					<a href="{{ path('labo_user_edit', {username: user.username}) }}" type="button" class="btn btn-white btn-xs btn-block"><i class="fa fa-pencil icon-wait-on-click"></i></a>
				</div>
				<div class="col-xs-4">
					{% if user.id == app.user.id %}
					<a href="{{ path('fos_user_deleting', {id: app.security.token.user.id}) }}" type="button" class="btn btn-white btn-xs need-confirmation" title="Supprimer votre compte ?" data-message="ATTENTION, vous êtes sur le point de supprimer votre compte ! Souhaitez-vous vraiment faire cette opération ?"><i class="fa fa-times icon-wait-on-click"></i></a>
					{% elseif app.user.haveRight(user) %}
					<a href="{{ path('labo_user_delete', {username: user.username}) }}" type="button" class="btn btn-white btn-xs btn-block need-confirmation" title="Supprimer {{ user.username }}" data-message="Souhaitez-vous vraiment supprimer ce compte ?"><i class="fa fa-times icon-wait-on-click"></i></a>
					{% endif %}
				</div>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
	{% endif %}

	{% endfor %}

	{% endif %}

{% else %}
	<div class="col-md-12">
		<div class="ibox float-e-margins">
			<div class="ibox-content">
				<h3><i class="fa fa-ban"></i> Aucun utilisateur trouvé.</h3>
			</div>
		</div>
	</div>
{% endif %}
</div>

{% endblock content %}