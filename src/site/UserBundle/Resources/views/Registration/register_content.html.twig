{% trans_default_domain 'siteUserBundle' %}

	<section id="section-gray">
	
		<div id="contact-page" class="container-fluid">
			<div class="row">
				<div class="col-sm-6 col-sm-offset-3 m-t-lg">
					{% if form_errors(form) != null %}
					<div class="status alert alert-danger">{{ form_errors(form) }}</div>
					{% endif %}
					<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
						<div class="form-group col-md-12">
							{{ form_widget(form.email) }}
							{{ form_errors(form.email) }}
						</div>
						<div class="form-group col-md-12">
							{{ form_widget(form.username) }}
							{{ form_errors(form.username) }}
						</div>
						<div class="form-group col-md-12">
							{{ form_widget(form.nom) }}
							{{ form_errors(form.nom) }}
						</div>
						<div class="form-group col-md-12">
							{{ form_widget(form.prenom) }}
							{{ form_errors(form.prenom) }}
						</div>
						<div class="form-group col-md-12">
							<div class="row">
								<div class="col-md-4">
									{{ form_label(form.plainPassword.first) }}
								</div>
								<div class="col-md-8">
									{{ form_widget(form.plainPassword.first) }}
									{{ form_errors(form.plainPassword.first) }}
								</div>
							</div>
						</div>
						<div class="form-group col-md-12">
							<div class="row">
								<div class="col-md-4">
									{{ form_label(form.plainPassword.second) }}
								</div>
								<div class="col-md-8">
									{{ form_widget(form.plainPassword.second) }}
									{{ form_errors(form.plainPassword.second) }}
								</div>
							</div>
						</div>
						<div class="form-group col-md-12">
							{{ form_widget(form.telephone) }}
							{{ form_errors(form.telephone) }}
						</div>
						{# <div class="form-group col-md-12"> #}
							{# {{ form_widget(form.adresse) }} #}
							{# {{ form_errors(form.adresse) }} #}
						{# </div> #}
						{# <div class="form-group col-md-12"> #}
							{# {{ form_widget(form.adresseLivraison) }} #}
							{# {{ form_errors(form.adresseLivraison) }} #}
						{# </div> #}
						<div class="form-group col-md-12">
							<input type="submit" id="_submit" name="_submit" class="btn btn-primary btn-md btn-block" value="{{ 'registration.submit'|trans|capitalize }}">
						</div>
						{{ form_rest(form) }}
					</form>
				</div>
			</div>
		</div>

	</section>
