{% trans_default_domain 'siteUserBundle' %}

	<section id="section-gray">
	
		<div id="contact-page" class="container-fluid"><!--container-->
			<div class="row">
				<div class="col-sm-6 col-sm-offset-3 m-t-lg">
					{% if invalid_username is defined %}
					<div class="form-group col-md-12">
						<div class="status alert alert-danger">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</div>
					</div>
					{% endif %}
					<form action="{{ path('fos_user_resetting_send_email') }}" method="POST">
						<div class="form-group col-md-12">
							<input type="text" id="username" name="username" required="required" class="form-control input-sm" placeholder="{{ 'resetting.request.username'|trans }}" />
						</div>
						<div class="form-group col-md-12">
							<input type="submit" id="_submit" name="_submit" class="btn btn-primary btn-md btn-block" value="{{ 'resetting.request.submit'|trans|capitalize }}">
						</div>
					</form>
				</div>
			</div>
		</div>

	</section>
